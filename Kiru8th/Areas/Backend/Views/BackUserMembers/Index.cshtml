@model IEnumerable<Kiru8th.Models.Backmember>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Backend/Views/Shared/_Layout.cshtml";
}
<div class="pcoded-content">
    <!-- Page-header start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h5 class="m-b-10">管理者帳號列表</h5>
                        <p class="m-b-0">管理者帳號</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index")"> <i class="fa fa-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index","BackUserMembers")">管理者帳號列表</a>
                        </li>
                        @*<li class="breadcrumb-item">
                                <a href="@ViewBag.url">精選文章</a>
                            </li>*@
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page-header end -->
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="card">
                <div class="card-block table-border-style">
                    <div class="table-responsive">
                        <p>
                            @Html.ActionLink("Create New", "Create")
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Photo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IniDateTime)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        <img src="~/images/@item.Photo" alt="title image" class="img-radius img-40 align-top m-r-15">
                                        @*@Html.DisplayFor(modelItem => item.Photo)*@
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IniDateTime)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details",new{id=item.ID})" class="btn waves-effect waves-light btn-success btn-outline-success">詳細資料</a>
                                        <a href="@Url.Action("Edit", new{id = item.ID})" class="btn waves-effect waves-light btn-inverse btn-outline-inverse">編輯</a>
                                        <a href="@Url.Action("Delete",new{id=item.ID})" class="btn btn-danger waves-effect waves-light"onclick="return confirm('確定要刪除此會員資料嗎?')">刪除資料</a>
                                        @*@Html.ActionLink("Edit", "Edit", new {id = item.ID}) |
                                        @Html.ActionLink("Details", "Details", new {id = item.ID}) |
                                        @Html.ActionLink("Delete", "Delete", new {id = item.ID})*@
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
  



        </div>
    </div>
</div>