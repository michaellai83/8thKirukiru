@model IEnumerable<Kiru8th.Models.Backmember>


@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Areas/Backend/Views/Shared/_Layout.cshtml";
    ViewBag.url = Request.Url;
}
<div class="pcoded-content">
    <!-- Page-header start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h5 class="m-b-10">個人資訊</h5>
                        <p class="m-b-0">管理者帳號:@(ViewBag.UserName)</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index")"> <i class="fa fa-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("MyProfile","BackMember")">個人資訊</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@ViewBag.url">@(ViewBag.Name)</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page-header end -->
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">


                    <div class="card">
                        <div class="card-block">

                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Username)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Photo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IniDateTime)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Username)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @*@Html.DisplayFor(modelItem => item.Photo)*@
                                            <img src="~/images/@item.Photo" alt="title image" class="img-radius img-100 align-top m-r-15">
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IniDateTime)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("MyProfileEdit",new{id = item.ID})" class="btn waves-effect waves-light btn-primary btn-outline-primary">編輯</a>
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>

                    </div>
                    <p>
                        @*<a href="@Url.Action("Edit",new{id = Model.ID})" class="btn waves-effect waves-light btn-primary btn-outline-primary">編輯</a>*@
                        <a href="@Url.Action("Index")" class="btn btn-inverse waves-effect waves-light">回到會員列表</a>
                        @*@Html.ActionLink("Edit", "Edit", new {id = Model.ID}) |
                            @Html.ActionLink("Back to List", "Index")*@
                    </p>


                </div>
            </div>

        </div>
    </div>
</div>