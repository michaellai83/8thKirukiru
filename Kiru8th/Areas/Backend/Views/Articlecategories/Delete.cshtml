@model Kiru8th.Models.Articlecategory

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Backend/Views/Shared/_Layout.cshtml";
    ViewBag.url = Request.Url;
}
<div class="pcoded-content">
    <!-- Page-header start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h5 class="m-b-10">文章類別列表</h5>
                        <p class="m-b-0">刪除文章分類</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index")"> <i class="fa fa-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index","Articlecategories")">文章類別列表</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@ViewBag.url">刪除文章類別</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page-header end -->
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="card">
                <div class="card-header">
                    <h3>Are you sure you want to delete this?</h3>
                </div>

                <div class="card-block typography">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger waves-effect waves-light" /> |
                            <a href="@Url.Action("Index")" class="btn btn-inverse waves-effect waves-light">回到文章分類列表</a>
                            @*@Html.ActionLink("Back to List", "Index")*@
                        </div>
                    }
                </div>
            </div>




        </div>
    </div>
</div>